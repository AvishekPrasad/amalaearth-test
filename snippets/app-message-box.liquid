<div class="app-message-box">
  <div class="message-box__icon"><img src="{{ 'App-icon.png' | asset_url }}">
  </div>
  <div class="message-box__content">
    <p class="title">Earth-friendly shopping just got simpler!</p>
    <p class="heighlight">Download the App Now!</p>
  </div>
  <a href="" class="message-box__link" target="_blank">Get App</a>
</div>

<script>
  function getMobileOperatingSystem() {
      var userAgent = navigator.userAgent || navigator.vendor || window.opera;

      // Windows Phone must come first because its UA also contains "Android"
      if (/android/i.test(userAgent)) {
            $('.message-box__link').attr('href','https://play.google.com/store/apps/details?id=com.amala.earth');
      }else if (/iPad|iPhone|iPod/.test(userAgent) && !window.MSStream) {
          $('.message-box__link').attr('href','https://apps.apple.com/in/app/amala-earth/id1591399697');
      } else {
	  	$('.message-box__link').attr('href','https://play.google.com/store/apps/details?id=com.amala.earth');
      }
  }
  
  getMobileOperatingSystem();
</script>