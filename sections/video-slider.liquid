<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<div class="container">
  <header class="section__header video-header">
      
        <h2 class="section__title heading h3">{{section.settings.title}}</h2>
        <a href="{{section.settings.video_link}}" class="section__action-link link">{{section.settings.btn_text}} <svg focusable="false" class="icon icon--tail-right" viewBox="0 0 24 24" role="presentation">
      <path fill="currentColor" d="M22.707 11.293L15 3.586 13.586 5l6 6H2c-.553 0-1 .448-1 1s.447 1 1 1h17.586l-6 6L15 20.414l7.707-7.707c.391-.391.391-1.023 0-1.414z"></path>
    </svg></a>
      
  </header>
 
<div class="video-slider">
	{% for block in section.blocks %}
  <div class="video-slider-box">
    <a href="{{block.settings.video_url}}">
    	<img class="lazyload" data-src="{{block.settings.image | img_url: '300x300', crop: 'center'}}" alt="{{block.settings.image}}" height=300 width=300/>
        <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="play-circle" class="svg-inline--fa fa-play-circle fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="#fff" d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zm115.7 272l-176 101c-15.8 8.8-35.7-2.5-35.7-21V152c0-18.4 19.8-29.8 35.7-21l176 107c16.4 9.2 16.4 32.9 0 42z"></path></svg>
      <h4 class="vdheading">{{block.settings.videoHeading}}</h4>
      {% if block.settings.expspeaks %}
      <span class="expert-speaks-label">Expert Speaks</span>
      {% endif %}
    </a>
  </div>
  	{% endfor %}
  
  
</div>
  
</div>
<script>
  $(document).ready(function(){
  	$('.video-slider').slick({
      slidesToShow: 4,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 2000,
      arrows:true,
      dots:false,
      nfinite: true,
      adaptiveHeight: true,
      responsive: [
    {
      breakpoint: 991,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 460,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
  ]
    });
    
    
      
   $('.explore-collection-section').slick({
      slidesToShow: 5,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 5000,
      arrows:true,
      dots:false,
      infinite: true,
      adaptiveHeight: true,
      margin:15,
      responsive: [
    {
      breakpoint: 991,
      settings: {
        slidesToShow: 4,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 460,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
  ]
    });
    
    $('.homepage-tag-list').slick({
      slidesToShow: 5,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 5000,
      arrows:false,
      dots:true,
      infinite: true,
      adaptiveHeight: true,
      margin:15,
      responsive: [
    {
      breakpoint: 991,
      settings: {
        slidesToShow: 4,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 460,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1
      }
    }
  ]
    });
    
  });
</script>
<style>
  .expert-speaks-label {
   	position: absolute;
    top: 0px;
    left: 0px;
    border-radius: 0 10px 10px 0;
    z-index: 2;
    padding: 2px 5px;
    font-size: 12px;
    font-weight: 600;
    color: #fff;
    background-color: #9c4a2f;
    display: inline-block; 
  }
  
  h4.vdheading {
   	
  }
  
/*   .video-slider{margin-bottom:50px;} */
   .video-slider  .slick-arrow,.explore-collection-section .slick-arrow{opacity:0;color:transparent; position:absolute;top:50%; transform:translateY(-50%);z-index:99;transition:all 0.3s ease;}
  .video-slider:hover  .slick-arrow,.explore-collection-section:hover  .slick-arrow{
  	opacity:1;
  }
  .video-slider  .slick-arrow:before,.explore-collection-section .slick-arrow:before{
  	content:'';
    position:absolute;
    width:40px;
    height:40px;
    background-color:#cab49e;
    border-radius:50%;
  }
  .video-slider  .slick-arrow:after,.explore-collection-section .slick-arrow:after{
  	content:'';
    position:absolute;
    width:15px;
    height:15px;
    border-left:3px solid #fff;
    border-bottom:3px solid #fff;
    top:63%;
    transform:rotate(45deg) translateY(-50%);
  }
  .video-slider  .slick-arrow.slick-prev,.explore-collection-section  .slick-arrow.slick-prev{
  	left:0;
  }
  .video-slider  .slick-arrow.slick-prev:after,.explore-collection-section  .slick-arrow.slick-prev:after{
  	left:8px;
  }
  .video-slider  .slick-arrow.slick-next,.explore-collection-section  .slick-arrow.slick-next{
  	right:5px;
  }
  .video-slider  .slick-arrow.slick-next:after,.explore-collection-section  .slick-arrow.slick-next:after{
  	right:8px;
    top:14px;
    transform:rotate(225deg) translateY(0%);
  }
  .video-slider-box{
    margin:15px;
    overflow:hidden;
    border-radius:10px;
    position:relative;
  }
  .video-slider-box svg{
  	position:absolute;
    top:50%;
    left:50%;
    transform:translateX(-50%) translateY(-50%);
    opacity: 0.5;
    width:50px;
  }
  .video-slider-box img{border-radius:10px;margin:auto;width:100%;}
  .slick-dots{list-style:none;text-align:center;}
  .slick-dots  button{display:none;}
  .slick-dots li{display:inline-block;margin:5px;width:8px;height:8px;border-radius:50%;border:1px solid #b89c7d;}
  .slick-dots li.slick-active{background-color:#b89c7d;}
  @media(max-width:768px){
  .video-slider  .slick-arrow{
  	opacity:1;
  }
    .video-header{margin-top:35px;}
  }
</style>


{% schema %}
{
  "name": "Video Slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Videos"
    },
{
      "type": "text",
      "id": "btn_text",
      "label": "Button text",
      "default": "View all"
    },
{
            "type": "url",
            "id": "video_link",
            "label": "View All Link"
          }
   
  ],
"blocks": [
    {
      "type": "video",
      "name": "Add Video",
      "settings": [
         {
            "type": "video_url",
            "id": "video_url",
            "accept": ["vimeo", "youtube"],
            "label": "Video",
            "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "2:1 .jpg recommended. Used when video is not loaded (required for Vimeo)."
          },
		{
            "type": "text",
            "id": "videoHeading",
            "label": "Title",
  			"default": "Video Title"
          },
		{
          "type": "checkbox",
          "id": "expspeaks",
          "label": "Set label as expert speaks"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Video",
      "name": "Video Slider"
    }
  ]
}
{% endschema %}

