<style>
    .scroll_banner_container{
        display: none;
    }

    @media screen and (max-width: 767px) {
        .scroll_banner_container{
            display: block;
            margin-top: 15px;
            margin-left: 20px;
        }

        .scroll_banner_container .scroll_card_ele{
            width: 39.5%;
            margin-right: 3.5%;
            border-radius: 10px;
            counter-increment: scroll_card_ele;
            overflow: hidden;
        }

        .scroll_banner_container .scroll_card_container{
            height: 200px; 
            width: 100%; 
            background-size: contain;
            background-repeat: no-repeat;
        }

        .scroll_banner_container .scroll_banner_content{
            position: absolute;
            bottom: 0px;
            text-align: center;
            width: 100%;
            background-image: linear-gradient(to top, rgba(0, 0, 0, 0.8) 40%, rgba(80, 80, 80, 0.015));
            color: white;
            padding-top: 7px;
            padding-bottom: 7px;
        }

        .scroll_banner_container .scroll_banner_content h1{
            font-size: 11.5px;
        }

    }
</style>


<div class="scroll_banner_container" data-flickity='{ "freeScroll": false, "contain": true, "prevNextButtons": false, "pageDots": false }'>
    {% for block in section.blocks %}

        <a href="{{block.settings.scroll-ele-link}}" class="scroll_card_ele">
            <!-- <div class="scroll_card_container" style="background-image: url({{block.settings.scroll-image-picker | img_url: 'master'}});"> -->
                <img src="{{block.settings.scroll-image-picker | img_url: 'master'}}" alt="" class="min">
                <div class="scroll_banner_content">
                    <h1>{{block.settings.scroll-text-picker}}</h1>
                </div>
            <!-- </div> -->
            
        </a>
        
    {% endfor %}
</div>


{% schema %}
{
    "name": "Srollable Banners",
    "max_blocks": 10,
    "blocks": [
        {
            "name": "Scroll",
            "type": "scrollbanners",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "scroll-image-picker",
                    "label": "Enter the Image"
                },
                {
                    "type": "text",
                    "id": "scroll-text-picker",
                    "label": "Enter the Text"
                },
                {
                    "type": "url",
                    "id": "scroll-ele-link",
                    "label": "Enter the link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Scrollable Home Page Banner"
        }
    ]
}
{% endschema %}
